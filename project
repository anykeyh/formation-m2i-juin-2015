#!/usr/bin/env ruby

require 'bundler'
require 'sinatra/base'

Bundler.require

module Projet
  def self.require_files *files
    files.each do |file|
      require File.expand_path(
        File.join(__FILE__, "..", file)
      )
    end
  end

  def self.run!
    Projet.require_files "command", "datas"

    Server.run!

